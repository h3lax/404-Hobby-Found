{% extends 'base.html.twig' %}

{% block title %}My Clubs{% endblock %}

{% block body %}
<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">My Joined Clubs</h1>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        {% for club in clubs %}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <p class="card-text">{{ club.name }} (ID: {{ club.id }})</p>
              <p class="card-text">Joined by User ID: {{ app.user.id }}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                </div>
                <small class="text-muted">{{ club.users.count() }} Members</small>
              </div>
            </div>
          </div>
        </div>
        {% else %}
        <div class="col-12">
          <p>You haven't joined any clubs yet.</p>
        </div>
        {% endfor %}
      </div>    
    </div>
  </div>

</main>
{% endblock %}
