{% extends 'base.html.twig' %}

{% block title %}Crée ton Club{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg"> <!-- Card with shadow and rounded corners -->
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Crée ton Club</h2> <!-- Improved heading style -->

                    <!-- Start the form -->
                    {{ form_start(clubForm, {'attr': {'class': 'club-create-form', 'enctype': 'multipart/form-data'}}) }}
                    
                    <!-- Name field with floating label -->
                    <div class="form-floating mb-3">
                        {{ form_widget(clubForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du club'}}) }}
                        <label for="clubForm_name">Nom du club</label>
                    </div>

                    <!-- Description field with floating label -->
                    <div class="form-floating mb-3">
                        {{ form_widget(clubForm.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                        <label for="clubForm_description">Description</label>
                    </div>

                    <!-- Club Image field with label -->
                    <div class="mb-3">
                        <label for="clubForm_clubImg" class="form-label">Logo Club :</label>
                        {{ form_widget(clubForm.clubImg, {'attr': {'class': 'form-control-file'}}) }}
                    </div>

                    <!-- Checkbox for generating profile image -->
                    <div class="form-check mb-3 ml-1">
                        {{ form_widget(clubForm.genererImg, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="clubForm_genererImg">
                            Générer une image de profil
                        </label>
                    </div>

                    <!-- Social Link field with floating label -->
                    <div class="form-floating mb-3">
                        {{ form_widget(clubForm.socialLink, {'attr': {'class': 'form-control', 'placeholder': 'Lien social'}}) }}
                        <label for="clubForm_socialLink">Lien social (optionnel)</label>
                    </div>

                    <!-- Buttons for submit and cancel -->
                    <div class="d-flex justify-content-center gap-2">
                        <button class="btn btn-lg btn-primary" type="submit">Créer</button>
                        <a class="btn btn-lg btn-primary" href="{{ path('accueil') }}">Annuler</a>
                    </div>

                    {{ form_end(clubForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
