{% extends 'base.html.twig' %}

{% block title %}Modifier le Club{% endblock %}

{% block body %}
<div class="container mt-5 mb-5"> <!-- Added mb-5 for bottom margin -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Modifier le Club</h5>
                </div>
                <div class="card-body">
                    {{ form_start(clubForm) }}
                    
                    <!-- Render form fields inside the card -->
                    <div class="mb-3">
                        {{ form_row(clubForm.name, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(clubForm.description, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(clubForm.clubImg, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(clubForm.socialLink, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button class="btn btn-lg btn-success mb-3" type="submit">
                        Modifier
                    </button>
                    <a class="btn btn-lg btn-danger" href="{{ path('accueil') }}" >Annuler</a>
                    {{ form_end(clubForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
