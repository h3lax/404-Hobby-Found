{% extends 'base.html.twig' %}

{% block title %}Hobby Found{% endblock %}

{% block body %}
<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">T'as des hobbies? Nous aussi !</h1>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        {% for club in clubs %}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <p class="card-text">{{ club.name }}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  {% if app.user %}
                    <form action="{{ path('clubJoin', {'id': club.id}) }}" method="post">
                      <button type="submit" class="btn btn-sm btn-outline-secondary">Join</button>
                    </form>
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  {% else %}
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  {% endif %}
                </div>
                <small class="text-muted">30 000 Membres</small>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>    
    </div>
  </div>

</main>
{% endblock %}
